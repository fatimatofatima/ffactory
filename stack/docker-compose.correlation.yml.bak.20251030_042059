services:
  correlation-engine:
    build: ../apps/correlation-engine
    container_name: ffactory-correlation-engine
    restart: unless-stopped
    environment:
      DB_URL: postgresql://${PGUSER}:${PGPASSWORD}@db:5432/${PGDB}
